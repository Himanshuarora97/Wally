<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_30_dp"
        android:layout_marginLeft="@dimen/common_30_dp"
        android:layout_marginEnd="@dimen/common_30_dp"
        android:layout_marginRight="@dimen/common_30_dp"
        android:background="@drawable/rounded_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_14_dp"
            android:layout_marginLeft="@dimen/common_14_dp"
            android:layout_marginEnd="@dimen/common_14_dp"
            android:layout_marginRight="@dimen/common_14_dp"
            android:fontFamily="@font/ssp_bold"
            android:gravity="center"
            android:padding="@dimen/common_14_dp"
            android:text="First set the Live wallpaper "
            android:textColor="#000000"
            android:textSize="@dimen/h1" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/common_16_dp"
            android:layout_marginEnd="@dimen/common_16_dp"
            android:fontFamily="@font/ssp_regular"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingBottom="14dp"
            android:text="If you have choosen a non Time Based color list then double tap on the home screen to change the wallpaper color."
            android:textColor="@color/d_grey"
            android:textSize="@dimen/h3"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:background="@color/l_grey"
            android:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_16_dp"
            android:paddingBottom="@dimen/common_6_dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="Dismiss"
                android:fontFamily="@font/ssp_semi_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/h3"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
